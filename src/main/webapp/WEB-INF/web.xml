<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <listener>
        <listener-class>ua.foodtracker.injector.ContextLoadListener</listener-class>
    </listener>
    <error-page>
        <error-code>401</error-code>
        <location>/pages/error</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/error</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/pages/error</location>
    </error-page>
    <error-page>
        <error-code>406</error-code>
        <location>/pages/error</location>
    </error-page>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>ua.foodtracker.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>ua.foodtracker.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/pages/user/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/pages/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
